<%- include("./partials/adminPartials/login_register_top.ejs") %> 
<main class="container">
  <% if(confirmMessage){ %>
    <div class="container-top-popup">
      <div class="last-popup">
          <div class="p-action"><%= confirmMessage %></div>
          <div class="icon-check">
              <i class="fa-solid fa-check"></i>
          </div>
      </div>
  </div>
  <% } %>
    <div class="widget">
      <h3>Login</h3>
      <% if(msg){ %>
        <span style="color:#ff0018 " class="show-top-error"><%= msg %></span>
      <% } %> 
      <form action="/admin/login" method="POST">
        <div class="box">
          <label for="email">Email :</label>
          <input type="email" value="<%= myuser ? myuser.email : "" %>" name="email" id="email" required />
        </div>
        <div class="box">
          <label for="password">Password :</label>
          <input type="password" name="password" id="password" required />
        </div>
        <div class="forgotPassword">
          <a href="/admin/login/forgot-password">Forgot your password?</a>
        </div>
        <button type="submit">Login</button>
      </form>
    </div>
  </main>
<%- include("./partials/adminPartials/login_register_bottom.ejs") %> 
